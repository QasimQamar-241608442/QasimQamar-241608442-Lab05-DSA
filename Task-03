#TASK 04  
class Stack() : 
    def __init__(self):
        self.items = []

    def push(self,item):
        self.items.append(item)
        print(f"Pushed: {item}")

    def pop(self):
        if self.is_empty():
            print("List is empty.")
            return None
        pop_item = self.items.pop()
        print(f"Popped: {pop_item}")
        return pop_item 
    
    def peek(self):
        if self.is_empty():
            print ("List is empty.")
            return None
        return self.items[-1] 
    
    def is_empty(self):
        return len(self.items) == 0 
    
    def size(self):
        return len(self.items) 
    

def reverse(input_string):
    stack = Stack()

    #This for loop will push each character of the string onto the stack
    for char in input_string:
        stack.push(char)

    #Empty String that will hold the reversed string
    reversed_string = ''
    
    #This while loop will remove each character from the stack and append it to the reversed_string
    while not stack.is_empty():
        reversed_string += stack.pop()
    return reversed_string

if __name__ == "__main__":
    input_string = input("Enter a string to reverse: ")
    reversed = reverse(input_string)
    print("Reversed string:", reversed)
